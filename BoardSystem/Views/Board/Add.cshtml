@model BoardSystem.Models.Board

<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        <form class="form-horizontal" method="post" asp-controller="Board" asp-action="Add">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label>題目</label>
                <input type="text" class="form-control" asp-for="BoardTitle" placeholder="題目入力" />
                <span class="text-danger" asp-validation-for="BoardTitle"></span>
            </div>
            <div class="form-group">
                <textarea class="form-control" asp-for="BoardContents" placeholder="内容入力"></textarea>
                <span class="text-danger" asp-validation-for="BoardContents"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">投稿</button>
            </div>
</form>
    </div>
    <div class="col-lg-4"></div>
</div>